{
    "name": "bulletproof-frontend-testing-frontend",
    "type": "module",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "vite --port 3000",
        "build": "vite build",
        "test": "npm run test:integration && npm run test:functional && npm run test:snapshot",
        "test:windows": "npm run test:integration && npm run test:functional && npm run test:snapshot:windows",
        "test:integration": "vitest run --coverage",
        "test:functional": "playwright install chromium && playwright test --project=functional",
        "test:functional:debug": "playwright install chromium && playwright test --project=functional --debug",
        "test:snapshot": "playwright install chromium && playwright test --project=snapshot",
        "test:snapshot:windows": "playwright install chromium && npm run script:change-line-delimiter-to-windows && playwright test --project=snapshot && npm run script:change-line-delimiter-to-git",
        "test:snapshot:update": "playwright install chromium && playwright test --project=snapshot --update-snapshots",
        "test:snapshot:update:windows": "playwright install chromium && npm run script:change-line-delimiter-to-windows && playwright test --project=snapshot --update-snapshots && npm run script:change-line-delimiter-to-git",
        "lint": "eslint --max-warnings=0 src",
        "typecheck": "tsc -noEmit",
        "prepare": "husky install",
        "reformat": "prettier --write \"+(src|test)/**/*\"",
        "prettier:check": "prettier --check .",
        "preview": "vite preview --port 9000 --host",
        "script:change-line-delimiter-to-windows": "node scripts/line-delimiter.mjs --tactic=git-to-windows",
        "script:change-line-delimiter-to-git": "node scripts/line-delimiter.mjs --tactic=windows-to-git"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "dependencies": {
        "@axe-core/playwright": "^4.10.1",
        "@babel/core": "^7.26.9",
        "@babel/eslint-parser": "^7.26.8",
        "@babel/plugin-transform-runtime": "^7.26.9",
        "@babel/preset-env": "^7.26.9",
        "@babel/preset-react": "^7.26.3",
        "@babel/preset-typescript": "^7.26.0",
        "@emotion/css": "^11.13.5",
        "@faker-js/faker": "^9.5.0",
        "@playwright/test": "^1.50.0",
        "@radix-ui/react-icons": "^1.3.2",
        "@radix-ui/themes": "^3.2.0",
        "@remix-run/router": "^1.22.0",
        "@remix-run/web-fetch": "^4.4.2",
        "@tanstack/react-query": "^5.66.7",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.11.18",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-istanbul": "^3.2.4",
        "axios": "^1.7.9",
        "eslint-config-prettier": "^10.0.1",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-jest-dom": "^5.5.0",
        "eslint-plugin-testing-library": "^7.1.1",
        "factory.ts": "^1.4.2",
        "final-form": "^4.20.10",
        "history": "^5.3.0",
        "immer": "^10.1.3",
        "jsdom": "^26.1.0",
        "lighthouse": "^12.4.0",
        "mockiavelli": "^1.3.1",
        "msw": "^2.11.2",
        "playwright-lighthouse": "^4.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-final-form": "^6.5.9",
        "react-router-dom": "^7.2.0",
        "tar": "^7.4.3",
        "typescript": "^5.7.3",
        "vite": "^6.1.1",
        "vite-plugin-checker": "^0.9.0",
        "vitest-fail-on-console": "^0.10.1"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
